{
    "manifest_version": 3,
    "name": "SeeFast",
    "version": "1.0",
    "description": "Расширение для быстрого доступа к видео",
    "icons": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "action": {
      "default_popup": "html/index.html",
      "default_icon": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png",
        "28": "icons/delete-icon.png"
      }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }  